# Database
DATABASE_URL=postgresql://user:password@localhost:5432/tts_saas
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./tts_saas.db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Environment
ENVIRONMENT=development

# TTS Configuration
USE_GPU=false
XTTS_MODEL_PATH=./models/xtts_v2
MAX_CHARS_PER_REQUEST=5000

# Feature Flags
ENABLE_VOICE_CLONING=true
ENABLE_API_ACCESS=true
ENABLE_ADMIN_PANEL=true

# Pricing (characters per month/day)
FREE_DAILY_QUOTA=1000
STARTER_MONTHLY_QUOTA=100000
PRO_MONTHLY_QUOTA=500000

# Storage
STORAGE_TYPE=local
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=

# Billing
BILLING_PROVIDER=razorpay
# BILLING_PROVIDER=stripe
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
